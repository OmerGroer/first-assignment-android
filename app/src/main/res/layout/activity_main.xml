<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/num_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintDimensionRatio="1"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        android:tag="1"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/num_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/num_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintDimensionRatio="1"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        android:tag="2"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/num_1"
        app:layout_constraintEnd_toStartOf="@id/num_3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/num_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintDimensionRatio="1"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        android:tag="3"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/num_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/num_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintDimensionRatio="1"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        android:tag="4"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/num_5"
        app:layout_constraintTop_toBottomOf="@id/num_1" />

    <TextView
        android:id="@+id/num_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintDimensionRatio="1"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        android:tag="5"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/num_4"
        app:layout_constraintEnd_toStartOf="@id/num_6"
        app:layout_constraintTop_toBottomOf="@id/num_2" />

    <TextView
        android:id="@+id/num_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintDimensionRatio="1"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        android:tag="6"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/num_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num_3" />

    <TextView
        android:id="@+id/num_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintDimensionRatio="1"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        android:tag="7"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/num_8"
        app:layout_constraintTop_toBottomOf="@id/num_4" />

    <TextView
        android:id="@+id/num_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintDimensionRatio="1"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        android:tag="8"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/num_7"
        app:layout_constraintEnd_toStartOf="@id/num_9"
        app:layout_constraintTop_toBottomOf="@id/num_5" />

    <TextView
        android:id="@+id/num_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintDimensionRatio="1"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        android:tag="9"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/num_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num_6" />


    <TextView
        android:id="@+id/title"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="#2C2A2A"
        android:text="X Play"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>